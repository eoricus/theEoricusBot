{
  "include": ["src/*"],
  "compilerOptions": {
    "experimentalDecorators": true,

    "outDir": "./dist",

    "target": "es2016",

    "module": "commonjs",
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,

    "strict": true,
    "skipLibCheck": true
  }
}
